@model IEnumerable<MoneyManagerUI.Subcategories>

@{
    ViewData["Title"] = "Index";
}

    <h1>Subcategories of '@ViewBag.CategoryName' category</h1>

<p>
    <a asp-action="AddSubcat" asp-controller="Categories" asp-route-id="@ViewBag.CategoryId">Create New Subcategory</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

